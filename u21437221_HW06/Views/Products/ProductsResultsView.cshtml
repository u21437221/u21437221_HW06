@using u21437221_HW06.Models
@model List<ProductsJoin>

@{
    ViewBag.Title = "ProductsResultsView";
}

<h2>ProductsResultsView</h2>

<div class="container">
    <table class="table-condensed" width="100%" align="left">
       <thead>
          <tr>
             <td>
                <p style="float: left">
                  @Html.TextBox("")
                  <input type="submit" value="search" />
                </p>
             </td>
             <td>
               @*@Html.ActionLink("Search","Search",null, new { @class = "btn btn-primary btn-sm pull-right" })*@
               @*@Html.ActionLink("Create","Create",null, new { @class = "btn btn-primary btn-sm pull-right" })*@
                 <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="clearTextBox">Create</button>
             </td>
          </tr>
       </thead>
    </table>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Year</th>
                <th>Price</th>
                <th>Brand</th>
                <th>Category</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.ProductDetails.product_name)</td>
                <td>@Html.DisplayFor(modelItem => item.ProductDetails.model_year)</td>
                <td>@Html.DisplayFor(modelItem => item.ProductDetails.list_price)</td>
                <td>@Html.DisplayFor(modelItem => item.BrandDetails.brand_name)</td>
                <td>@Html.DisplayFor(modelItem => item.CategoryDetails.category_name)</td>
                @*<td>@Html.ActionLink("Edit", "Edit", new { id = item.ProductDetails.product_id }, new { @class = "btn btn-warning btn-xs" })</td>*@
                @*<td>@Html.ActionLink("Details", "Details", new { id = item.ProductDetails.product_id }, new { @class = "btn btn-success btn-xs" })</td>*@
                @*<td>@Html.ActionLink("Delete", "Delete", new { id = item.ProductDetails.product_id }, new { @class = "btn btn-danger btn-xs" })</td>*@
            </tr>
            }
        </tbody>
    </table>
</div>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="Name">Name</label>
                        <input type="text" class="form-control" id="Name" placeholder="Name" />
                    </div>
                    <div class="form-group">
                        <label for="Year">Year</label>
                        <input type="text" class="form-control" id="Year" placeholder="Year" />
                    </div>
                    <div class="form-group">
                        <label for="Price">Price</label>
                        <input type="number" class="form-control" id="Price" placeholder="0" />
                    </div>
                    <div class="form-group">
                        <label for="Brand">Brand</label>
                        <input type="text" class="form-control" id="Brand" placeholder="Brand" />
                    </div>
                    <div class="form-group">
                        <label for="Category">Category</label>
                        <input type="text" class="form-control" id="Category" placeholder="Category" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnAdd" onclick="return Add();">Add</button>
                <button type="button" class="btn btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/ProductData.js"></script>